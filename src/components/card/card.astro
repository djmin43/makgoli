---
import {MakgoliPlace} from "../../models";
interface Props {
    place: MakgoliPlace
}
const { place } = Astro.props;

---
<div class="card-container">
    <div class="name-container">
        <p class="name">{place.name}</p>
    </div>
    <div class="description-container">
        <div class="row-container">
            <label class="label">주소: </label>
            <p>{place.address}</p>
        </div>
        <div class="row-container">
            <label class="label">설립연도: </label>
            <p>{place.founded}</p>
        </div>
        <div class="row-container">
            <label class="label">대표자: </label>
            <p>{place.owner}</p>
        </div>
        <div class="row-container">
            <label class="label">주종: </label>
            <p>{place.category}</p>
        </div>
    </div>
</div>

<style>

    .card-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 16px;
        border: 1px solid lightgray;
    }

    .name-container {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 16px;
        .name {
            font-size: 18px;
            font-weight: 700;
        }
    }

    .description-container {
        margin-left: 32px;
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        width: 100%;
    }

    .row-container {
        display: flex;
    }
    .label {
        font-weight: 700;
        font-size: 14px;
    }
</style>